<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        style="?attr/toolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="?attr/colorPrimaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/battery_guardian"
        app:titleTextColor="?attr/colorOnPrimaryContainer" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/batteryPercentage"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_dialog_info"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/batteryPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Saude da Bateria EstÃ¡ :"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageViewBatteryHealth"
                app:layout_constraintStart_toEndOf="@id/imageViewInfo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewBatteryHealth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Battery icon indicating health status"
                app:layout_constraintBottom_toTopOf="@+id/textViewbatteryHealthStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/batteryPercentage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/battery_unknown_24px" />

            <TextView
                android:id="@+id/textViewbatteryHealthStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desconhecida"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewBatteryHealth"
                app:layout_constraintStart_toStartOf="@+id/imageViewBatteryHealth"
                app:layout_constraintTop_toBottomOf="@+id/imageViewBatteryHealth" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:text="Notificar quando a bateria estiver abaixo de:"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:id="@+id/seekBarLimit"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:min="10" />

        <TextView
            android:id="@+id/textViewLimitValue"
            android:text="20%"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>